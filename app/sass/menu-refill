/* Javascript */

$(document).ready(function() {
  var menu = $('nav>ul'); //.centered-navigation-menu
  var menuToggle = $('h1>a');
  var signUp = $('.sign-up');

  $(menuToggle).on('click', function(e) {
    e.preventDefault();
    menu.slideToggle(function(){
      if(menu.is(':hidden')) {
        menu.rremoveAttr('style');
      }
    });
  });
});
